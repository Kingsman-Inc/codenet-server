# üöÄ KINGSMAN SERVER - ENVIRONMENT CONFIGURATION
# Arquivo .env.example - Template para configura√ß√µes de produ√ß√£o
# COPIE para .env e configure suas vari√°veis

# === SERVER CONFIGURATION ===
HOST=0.0.0.0
PORT=8000
DEBUG=False
PYTHONUNBUFFERED=1
ENVIRONMENT=production

# === LOGGING CONFIGURATION ===
LOG_LEVEL=INFO
MAX_LOG_SIZE=10485760
LOG_RETENTION_DAYS=30

# === MONITORING CONFIGURATION ===
HEALTH_CHECK_INTERVAL=30
BACKUP_INTERVAL=3600
METRICS_COLLECTION=True

# === EXTERNAL SERVICES ===
# UptimeRobot API Key (para configura√ß√£o autom√°tica)
UPTIME_ROBOT_API_KEY=your_uptimerobot_api_key_here

# Webhook para notifica√ß√µes (Discord, Slack, etc.)
WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_URL

# URL do servidor (configurado automaticamente pelo Railway/Render)
# SERVER_URL=https://your-app.railway.app

# === SECURITY CONFIGURATION ===
# API Keys para servi√ßos externos
GITHUB_TOKEN=your_github_token_here
RAILWAY_TOKEN=your_railway_token_here

# JWT Secret (para autentica√ß√£o futura)
JWT_SECRET=your_jwt_secret_here

# === DATABASE CONFIGURATION (futuro) ===
# DATABASE_URL=postgresql://user:pass@host:port/dbname
# REDIS_URL=redis://host:port/db

# === PERFORMANCE TUNING ===
MAX_WORKERS=4
REQUEST_TIMEOUT=30
MAX_REQUEST_SIZE=16777216

# === FEATURE FLAGS ===
ENABLE_METRICS=True
ENABLE_BACKUP=True
ENABLE_AUTO_RESTART=True
ENABLE_SECURITY_SCAN=True

# === NOTIFICATION SETTINGS ===
ALERT_ON_HIGH_CPU=80
ALERT_ON_HIGH_MEMORY=85
ALERT_ON_HIGH_ERRORS=10
ALERT_ON_DOWNTIME=True

# === MAINTENANCE MODE ===
MAINTENANCE_MODE=False
MAINTENANCE_MESSAGE="Server under maintenance. Please try again later."

# === RATE LIMITING ===
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# === CORS CONFIGURATION ===
CORS_ORIGINS=*
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# === CUSTOM CONFIGURATION ===
# Adicione suas configura√ß√µes personalizadas aqui
APP_NAME=KingsmanServer
APP_VERSION=2.0.0
COMPANY=Kingsman-Inc